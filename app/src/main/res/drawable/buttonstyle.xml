<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#333333" />
            <gradient android:angle="-90" android:startColor="#6e6e6e" android:endColor="#494949"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3e3e3e" />
            <solid android:color="#6e6e6e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3e3e3e" />
            <gradient android:angle="-90" android:startColor="#333333" android:endColor="#6e6e6e" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pQuiz_count_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Question #"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/pQuiz_title_flag"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRACTICE QUIZ"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/pFlag_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="To which country does this flag belong to?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/pFlag_image"
            android:layout_width="356dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="131dp"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/answer_ffq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer"
            android:textSize="17dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/pFlag_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/response_ffq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type Here"
            android:textSize="14dp"
            android:textStyle="italic"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
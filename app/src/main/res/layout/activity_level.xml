<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".play.LevelActivity"
    android:padding="16dp"
    android:background="@drawable/game_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/leveltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/level"
            android:textStyle="bold|italic"
            android:textSize="30sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/level1"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/round_border_levels"
            android:gravity="center"
            android:text="@string/level_1"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="58dp"
            app:layout_constraintTop_toBottomOf="@id/leveltitle"
            android:layout_marginTop="30dp" />

        <View
            android:id="@+id/vline1"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level1"/>

        <TextView
            android:id="@+id/level2"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="@string/level_2"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/round_border_levels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vline1"/>

        <View
            android:id="@+id/vline2"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level2"/>

        <TextView
            android:id="@+id/level3"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/level_3"
            android:gravity="center"
            android:background="@drawable/round_border_levels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vline2"/>

        <View
            android:id="@+id/vline3"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level3"/>

        <TextView
            android:id="@+id/level4"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/level_4"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/round_border_levels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vline3"/>

        <View
            android:id="@+id/vline4"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level4"/>

        <TextView
            android:id="@+id/final_quiz"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="@string/final_quiz"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/round_border_levels"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vline4"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>